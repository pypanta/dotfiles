# Recive options
set imap_user = "mymail@gmail.com"
set imap_pass = $my_pass2
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record = "+Sent"

# Sent options
set smtp_url = "smtps://mymail@gmail.com@smtp.gmail.com:465/"
set smtp_pass = $my_pass2
set from = "mymail@gmail.com"
set realname = "John Doe"
set hostname = "gmail.com"
set signature = "John Doe"

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
#account-hook $folder "set imap_user=mymail@gmail.com imap_pass=mypass"
