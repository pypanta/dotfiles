# Recive options
set imap_user = "MyMail21@gmail.com"
set imap_pass = $my_pass1
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record = "+Sent"

# Sent options
set smtp_url = "smtps://MyMail21@gmail.com@smtp.gmail.com:465/"
set smtp_pass = $my_pass1
set from = "MyMail21@gmail.com"
set hostname = "gmail.com"
set signature = "Aleksandar Pantic"

# Connection options
set ssl_force_tls = yes
unset ssl_starttls
set header_cache = ~/.mutt/personal/cache/headers
set message_cachedir = ~/.mutt/personal/cache/bodies
set certificate_file = ~/.mutt/personal/certificates

## Hook -- IMPORTANT!
#account-hook $folder "set imap_user=MyMail21@gmail.com imap_pass=mypass"
